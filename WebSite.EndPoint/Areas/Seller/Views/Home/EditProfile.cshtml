@model WebSite.EndPoint.Areas.Seller.Models.BoothSellerVM

@{
    ViewData["Title"] = "EditSeller";
    Layout = null;
}




<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>ویرایش مشخصات | HAMTA - Ecommerce HTML Template</title>

    <link rel="stylesheet" href="~/themesite/assets/css/font-awesome.min.css">
    <!-- Bootstrap 4.5.3 -->
    <link rel="stylesheet" href="~/themesite/assets/bootstrap/css/bootstrap.min.css">
    <link rel="stylesheet" href="~/themesite/assets/css/theme.css">

</head>

<body>
    <!-- Page Content -->
    <main class="page-content ">
        <div class="container">
            <div class="auth-wrapper">
                <div class="auth-form shadow-around">
                    <div class="site-logo">

                        @*       محل لوگو*@

                    </div>
                    <div class="auth-form-title text-center">
                        ثبت نام در دال مارکت
                    </div>
                    <form asp-action="EditProfile" asp-controller="Home" asp-area="Seller" method="post">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                        <input asp-for="AddressId" type="hidden">
                        <input asp-for="BoothId" type="hidden">
                        <input asp-for="SellerId" type="hidden">
                        <div class="form-element-row">
                            <label asp-for="CompanyName" class="label-element"> </label>
                            <div class="form-element-with-icon">
                                <input asp-for="CompanyName" class="input-element">
                                <i class="fad fa-user"></i>
                            </div>
                            <span asp-validation-for="CompanyName" class="text-danger"></span>

                        </div>
                        <div class="form-element-row">
                            <label asp-for="BoothName" class="label-element"> </label>
                            <div class="form-element-with-icon">
                                <input asp-for="BoothName" class="input-element">
                                <i class="fad fa-mailbox"></i>
                            </div>
                            <span asp-validation-for="BoothName" class="text-danger"></span>
                        </div>
                        <div class="form-element-row">
                            <label asp-for="BoothDescription" class="label-element"> </label>
                            <div class="form-element-with-icon">
                                <input asp-for="BoothDescription" class="input-element">
                                <i class="fad fa-key"></i>
                            </div>
                            <span asp-validation-for="BoothDescription" class="text-danger"></span>

                        </div>
                        <div class="form-element-row">
                            <label asp-for="City" class="label-element"> </label>
                            <div class="form-element-with-icon">
                                <input asp-for="City" class="input-element">
                                <i class="fad fa-key"></i>
                            </div>
                            <span asp-validation-for="City" class="text-danger"></span>

                        </div>
                        <div class="form-element-row">
                            <label asp-for="Street" class="label-element"> </label>
                            <div class="form-element-with-icon">
                                <input asp-for="Street" class="input-element">
                                <i class="fad fa-mobile-alt"></i>
                            </div>
                            <span asp-validation-for="Street" class="text-danger"></span>

                        </div>
                        <div class="form-element-row">
                            <label asp-for="AddressDescription" class="label-element"> </label>
                            <div class="form-element-with-icon">
                                <input asp-for="AddressDescription" class="input-element">
                                <i class="fad fa-mobile-alt"></i>
                            </div>
                            <span asp-validation-for="AddressDescription" class="text-danger"></span>

                        </div>
                        
                        <div class="form-element-row text-left">
                            <button class="btn-element btn-success-element">
                                <i class="fad fa-user-edit"></i>
                               به روز رسانی کن
                            </button>
                        </div>

                    </form>
                </div>
            </div>
        </div>
    </main>

    <script src="~/themesite/assets/js/jquery-3.5.1.min.js"></script>
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
</body>
</html>






