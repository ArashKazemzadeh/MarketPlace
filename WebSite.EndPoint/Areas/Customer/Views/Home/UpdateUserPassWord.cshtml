@model WebSite.EndPoint.Areas.Customer.Models.PasswordUpdateVM
@{
    ViewData["Title"] = "UpdateUserPassWord";
}
@if (@ViewBag.Message!=null)
{
    <div class="alert alert-success">@ViewBag.Message</div>

}
<div class="row m-5 p-5 form-group d-flex justify-content-center">
    <div class="col-md-4">
        <form asp-action="UpdateUserPassWord">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="currentPassword" class="control-label"></label>
                <input asp-for="currentPassword" class="form-control" />
                <span asp-validation-for="currentPassword" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="newPassword" class="control-label"></label>
                <input asp-for="newPassword" class="form-control" />
                <span asp-validation-for="newPassword" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="RenewPassword" class="control-label"></label>
                <input asp-for="RenewPassword" class="form-control" />
                <span asp-validation-for="RenewPassword" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="ویرایش کن" class="btn btn-primary btn-block" />
            </div>
        </form>
    </div>
</div>




