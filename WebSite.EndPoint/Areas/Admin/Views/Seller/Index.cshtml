@model IEnumerable<ConsoleApp.Models.SellerDto>
@{
    ViewData["Title"] = "Index";
}


<div class="row">

    <div class="table-responsive m-5 col-10">
        <table class="table table-bordered table-hover table-condensed mb-4">
            <thead>
                <tr>
                    
                    <th>
                        نام شرکت/برند
                    </th>
                    <th>
                        درصد کمیسیون
                    </th>
                    <th>
                        مبلغ کمیسیون دریافتی از فروشنده
                    </th>
                    <th>
                        جمع کل فروش 
                    </th>
                    <th class="text-center">
                        عملیات
                    </th>
                </tr>
            </thead>
            <tbody>

                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.CompanyName)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.CommissionPercentage)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.CommissionsAmount)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.SalesAmount)
                        </td>
                        <td class="text-center">
                            <ul class="table-controls row">
                                <li><a asp-action="Edit" asp-route-id="@item.Id" class="col-6" data-toggle="tooltip" data-placement="top" title="" data-original-title="ویرایش"><svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="feather feather-edit-2 text-success"><path d="M17 3a2.828 2.828 0 1 1 4 4L7.5 20.5 2 22l1.5-5.5L17 3z"></path></svg></a></li>
                         
                                <li><a asp-action="Delete" asp-route-id="@item.Id" class="col-6" data-toggle="tooltip" data-placement="top" title="" data-original-title="حذف"><svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="feather feather-trash-2 text-danger"><polyline points="3 6 5 6 21 6"></polyline><path d="M19 6v14a2 2 0 0 1-2 2H7a2 2 0 0 1-2-2V6m3 0V4a2 2 0 0 1 2-2h4a2 2 0 0 1 2 2v2"></path><line x1="10" y1="11" x2="10" y2="17"></line><line x1="14" y1="11" x2="14" y2="17"></line></svg></a></li>
                            </ul>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
    <div class="col-2"> .</div>
</div>     