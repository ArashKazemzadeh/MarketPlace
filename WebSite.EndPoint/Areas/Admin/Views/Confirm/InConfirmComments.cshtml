@model IEnumerable<ConsoleApp.Models.CommentDto>
@{
    ViewData["Title"] = "تایید کامنت‌ها";
}
@if (ViewBag.Message!=null)
{
    <div class="alert alert-success m-1 p-1">
        <p>@ViewBag.Message</p>
    </div>
}

<table class="table table-bordered m-2">
    <thead>
        <tr>
            <th>
                شناسه
            </th>
            <th>
                عنوان
            </th>
            <th>
                توضیحات
            </th>
            <th>
                تاریخ ثبت
            </th>
            <th>
                نام فروشنده
            </th>
            <th>
                شناسه محصول
            </th>
            <th>
                شناسه مشتری
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @item.Id
                </td>
                <td>
                    @item.Title
                </td>
                <td>
                    @item.Description
                </td>
                <td>
                    @item.RegisterDate
                </td>
                <td>
                    @item.SellerName
                </td>
                <td>
                    @item.ProductId
                </td>
                <td>
                    @item.CustomertId
                </td>
                <td>
                    <a class="btn btn-primary" asp-action="ToConfirmingComment" asp-route-commentId="@item.Id">تایید کامنت</a>
                </td>
            </tr>
        }
    </tbody>
</table>