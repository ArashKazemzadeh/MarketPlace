@model WebSite.EndPoint.Areas.Seller.Models.CommentAddVm
@{
    ViewData["Title"] = "Create";
    Layout = "/Areas/Customer/Views/Shared/_Layout.cshtml";
}

<div class="row m-5 p-5 form-group d-flex justify-content-center" >
    <div class="col-md-4">
        <form asp-action="AddCommentForCart">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="productId" class="form-control" />
            <div class="form-group">
                <label asp-for="title" class="control-label"></label>
                <input asp-for="title" class="form-control" required="پرشود"/>
                <span asp-validation-for="title" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="describtion" class="control-label"></label>
                <textarea asp-for="describtion" class="form-control" required="پرشود"></textarea>
                <span asp-validation-for="describtion" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="ثبت دیدگاه" class="btn btn-primary btn-block" />
            </div>
        </form>
    </div>
</div>

