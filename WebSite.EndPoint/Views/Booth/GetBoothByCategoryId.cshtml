@model List<WebSite.EndPoint.Areas.Admin.Models.BoothVM>
@{
    ViewData["Title"] = "GetBoothByCategoryId";
}

<div class="row ">
    @foreach (var booth in Model)
    {
        <div class="card component-card_2 col-2 m-5 text-center">
            <h3>نام غرفه: @booth.Name</h3>
            <h5>نام دارنده غرفه: @booth.Seller</h5>
            <p>معرفی غرفه:  @booth.Description</p>
            <div class="card-body">
                <a asp-controller="Booth" asp-action="EnterToBooth" asp-route-boothId="@booth.Id" class="btn btn-primary btn-block">ورود به غرفه</a>
            </div>
        </div>
    }
</div>

