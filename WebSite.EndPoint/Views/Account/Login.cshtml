@model WebSite.EndPoint.Models.ViewModels.Users.LoginViewModel
@{
    ViewData["Title"] = "ورود به حساب";
    Layout = null;
}


<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>ورود| HAMTA - Ecommerce HTML Template</title>

    <link rel="stylesheet" href="~/themesite/assets/css/font-awesome.min.css">
    <!-- Bootstrap 4.5.3 -->
    <link rel="stylesheet" href="~/themesite/assets/bootstrap/css/bootstrap.min.css">
    <link rel="stylesheet" href="~/themesite/assets/css/theme.css">
    <style>
        body, html {
            height: 100%;
            margin: 0;
            padding: 0;
            overflow: hidden;
        }
        body {
            background-color: cornflowerblue
        }
        .auth-page-wrapper {
            display: flex;
            align-items: center;
            justify-content: center;
            height: 100%;
            overflow: auto;
        }
    </style>

</head>

<body >

    <div class="page-wrapper auth-page-wrapper">

        <!-- Page Content -->
        <main class="page-content">
            <div class="container">
                <div class="auth-wrapper">
                    <div class="auth-form shadow-around">
                        <div class="site-logo">
                            <img src="~/templatestore/images/eagle-png-logo.png" style="width: 25%"/>
                        </div>
                        <div class="auth-form-title text-center">
                            ورود به دال مارکت
                        </div>

                        <form asp-action="Login">

                            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                            <div class="form-element-row">
                                <label asp-for="Email" class="label-element"></label>
                                <input type="hidden" asp-for="ReturnUrl" />
                                <div class="form-element-with-icon">
                                    <input asp-for="Email" class="input-element" />
                                    <i class="fad fa-user"></i>
                                </div>
                                <span asp-validation-for="Email" class="text-danger"></span>

                            </div>
                            <div class="form-element-row">
                                <label asp-for="Password" class="label-element">
                                    <span class="d-flex justify-content-between">
                                        <span> گذرواژه</span>
                               
                                    </span>
                                </label>
                                <div class="form-element-with-icon">
                                    <input class="input-element" asp-for="Password">
                                    <i class="fad fa-key-skeleton"></i>
                                </div>
                                <span asp-validation-for="Password" class="text-danger"></span>
                            </div>
                            <div class="form-element-row">
                                <label class="container-checkbox">
                                    مرا به خاطر داشته باش
                                    <input type="checkbox" checked="checked">
                                    <span class="checkmark"></span>
                                </label>
                            </div>
                            <div class="form-element-row text-left">
                                <button class="btn-element btn-info-element">
                                    <i class="fad fa-sign-in-alt"></i>
                                    ورود به فروشگاه
                                </button>
                            </div>
                           
                        </form>
                        <div class="auth-form-footer">
                            <span>کاربر جدید هستید؟</span>
                            <a asp-controller="account" asp-action="Register" asp-area="" class="link--with-border-bottom">ثبت نام در فروشگاه</a>
                        </div>
                    </div>
                </div>
            </div>
        </main>
        <!-- end Page Content -->
     

    </div>


    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }

<script src="~/themesite/assets/js/jquery-3.5.1.min.js"></script>
</body>

</html>

